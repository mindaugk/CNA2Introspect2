{
  "pipeline": {
    "name": "claim-status-pipeline",
    "roleArn": "${CODEPIPELINE_ROLE_ARN}",
    "artifactStore": {
      "type": "S3",
      "location": "${ARTIFACT_BUCKET}"
    },
    "stages": [
      {
        "name": "Source",
        "actions": [
          {
            "name": "Source",
            "actionTypeId": {
              "category": "Source",
              "owner": "AWS",
              "provider": "CodeStarSourceConnection",
              "version": "1"
            },
            "configuration": {
              "ConnectionArn": "${CODESTAR_CONNECTION_ARN}",
              "FullRepositoryId": "${GITHUB_OWNER}/${GITHUB_REPO}",
              "BranchName": "${GITHUB_BRANCH}",
              "DetectChanges": "true"
            },
            "outputArtifacts": [
              {
                "name": "source_output"
              }
            ]
          }
        ]
      },
      {
        "name": "BuildDeploy",
        "actions": [
          {
            "name": "BuildAndDeploy",
            "actionTypeId": {
              "category": "Build",
              "owner": "AWS",
              "provider": "CodeBuild",
              "version": "1"
            },
            "configuration": {
              "ProjectName": "${CODEBUILD_PROJECT_NAME}"
            },
            "inputArtifacts": [
              {
                "name": "source_output"
              }
            ],
            "outputArtifacts": [
              {
                "name": "build_output"
              }
            ]
          }
        ]
      }
    ],
    "version": 1
  }
}
